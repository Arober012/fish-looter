# Public hosting environment template
# Copy to .env.local and fill with your real values (keep secrets out of source control)

# --- Server / Twitch integration ---
PORT=3100
TWITCH_CHANNEL=your_twitch_channel
TWITCH_USERNAME=your_bot_username
TWITCH_OAUTH_TOKEN=oauth:your_bot_token
TWITCH_CLIENT_ID=your_twitch_app_client_id
TWITCH_CLIENT_SECRET=your_twitch_app_client_secret
TWITCH_EXTENSION_SECRET=your_extension_secret
CATALOG_VERSION=1.0.0
ENABLE_ACTIVITY_LOGS=true
DISABLE_COOLDOWN=false
PANEL_DEV_MODE=false

# Public host used for OAuth callbacks and client config
PUBLIC_HOST=https://www.fish.custom-overlays.com

# Session signing for panel/overlay auth (set to a long random string)
APP_JWT_SECRET=replace-with-a-strong-random-string

# Optional HTTPS certs (use absolute paths to PEM files)
CERT_PATH=
KEY_PATH=

# --- Client build (overlay + panel) ---
# Point these to the public origin that serves your API/socket (same host is fine)
VITE_API_BASE=https://www.fish.custom-overlays.com
VITE_SOCKET_URL=wss://www.fish.custom-overlays.com
VITE_PANEL_DEV=false
